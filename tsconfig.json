{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            // "~/*": [
            //     "./*"
            // ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "@types/node",
            "@types/dom-mediacapture-record"
        ]
    },
    "vueCompilerOptions": {
        "experimentalCompatMode": 2,
        "experimentalTemplateCompilerOptions": {
            "compatConfig": {
                "MODE": 2
            } // optional
        }
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist"
    ]
}